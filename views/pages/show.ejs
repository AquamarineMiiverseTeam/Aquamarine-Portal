<%- include('../partials/header'), { account : account } %>

    <div class="wrapper">
        <div class="wrapper-content">
            <header class="header">
                <h1 class="content-title">Communities</h1>
            </header>

            <div class="communities-listing main-page">

                <div class="communities-headline">
                    <span class="headline-text">New Communities</span>
                </div>

                <div class="commnities-new-added">

                    <% for (let i = 0; i < newest_communities.length; i++) {
                        const community = newest_communities[i];%>
                        
                        <li id="community-<%= community.id %>" class="">
                        <span class="icon-content">
                            <img class="icon" src="../../img/icons/<%= community.id %>.jpg">
                        </span>
                        <a data-sound="SE_WAVE_OK" href="javascript:void(0)" onclick="pjax.loadUrl('/communities/<%= community.id %>/')" class="scroll to-community-button">
                            <span class="community-button"></span>
                        </a>
                        <div class="body">
                            <div class="body-content">
                                <span class="community-name title"><%= ((community.name).toString().includes("Community")) ? community.name : community.name + " Community" %></span>
                                <span class="community-name name"><%= community.name %></span>
                                <span class="empathy-count"><%= community.favorites %></span>
                                <span class="text">
                                    <% if (community.platform == "3ds") { %>Nintendo 3DS Games<% } else { %>Wii U Games<% } %>
                                </span>
                            </div>
                        </div>
                    </li>

                    <% } %> 
                </div>

                <div class="communities-headline special">
                    <span class="headline-text">Special Communities</span>
                </div>

                <div class="commnities-new-added">

                    <% for (let i = 0; i < special_communities.length; i++) {
                        const community = special_communities[i];%>
                        
                        <li id="community-<%= community.id %>" class="">
                        <span class="icon-content">
                            <img class="icon" src="../../img/icons/<%= community.id %>.jpg">
                        </span>
                        <a data-sound="SE_WAVE_OK" href="javascript:void(0)" onclick="pjax.loadUrl('/communities/<%= community.id %>')" class="scroll to-community-button">
                            <span class="community-button"></span>
                        </a>
                        <div class="body">
                            <div class="body-content">
                                <span class="community-name title"><%= ((community.name).toString().includes("Community")) ? community.name : community.name + " Community"  %></span>
                                <span class="community-name name"><%= community.name %></span>
                                <span class="empathy-count"><%= community.favorites %></span>
                                <span class="text">
                                    <% if (community.platform == "3ds") { %>Nintendo 3DS Games<% } else { %>Wii U Games<% } %>
                                </span>
                            </div>
                        </div>
                    </li>

                    <% } %> 
                </div>

                <a href="javascript:void(0)" class="more-button scroll" data-sound="SE_WAVE_OK" onclick="pjax.loadUrl('/titles/communities')">See all communities</a>
            </div>
        </div>
    </div>