<%- include('../partials/header'), {
    account : account
} %>

<body onload="wiiuBrowser.endStartUp(); wiiuSound.playSoundByName('BGM_OLV_MAIN', 3);">
    <%- include('../partials/sidebar') %>
    <content>
        <div class="page_name"><span><%= community.name%></span></div>

        <img class="community_banner" src="../../../img/banners-wup/<%= community.id %>.jpg" width="1280px" height="180px" onerror="this.src='../../../img/banners-wup/placeholder-wup.jpg'">

        <div class="community_data_wrapper">
            <img width="100px" height="100px" src="../../../img/icons/<%= community.id %>.jpg" onerror="this.src='../../../img/icons/placeholder.jpg'">

            <div class="community_name_wrapper">
                <span class="community_name"><%= community.name %> Community</span>
                <span class="community_description"><%= community.description %></span>
            </div>
        </div>

        <div class="posts_wrapper">
            <% for (let i = 0; i < posts.length; i++) {%>
                <%- include("../partials/post.ejs", {post : posts[i]}) %>
            <%} %>
        </div>
    </content>
</body>