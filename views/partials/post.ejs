<div id="post-<%= post.id %>" class="post">
    <a href="/users/sosadavid22" class="user-icon-container scroll-focus" data-pjax="#body">
        <img src="<%= post.mii_image %>" class="user-icon">
    </a>
    <div class="post-body-content">
        <div class="post-body">
            <header>
                <span class="user-name">
                    <%= post.mii_name %>
                </span>
                <span class="timestamp">
                    <%= moment(post.create_time).fromNow() %>
                </span>
                <span class="spoiler-status">
                    <% if (post.spoiler==1) { %>
                        Spoiler
                    <% } %>
                </span>
            </header>

            <div class="post-content">
                <% if (post.topic_tag) { %>
                    <span class="post-tag"><%= post.topic_tag %></span>
                <% } %>
                
                <% if (post.body) { %>
                    <p class="post-content-text"><%= post.body %></p>
                <% } else { %>
                    <img class="post-content-memo" src="/img/paintings/<%= post.id%>.png" width="640px" height="240px">
                <% } %>

                <% if (post.screenshot) { %>
                    <img class="post-content-screenshot" style="border-radius: 10px;" src="/img/screenshots/<%= post.id %>.jpg">
                <% } %>
                
            </div>

            <div class="post-meta">
                <button type="button" data-post-id="<%= post.id %>" class="submit miitoo-button"><% if (post.is_empathied_by_user) {%>Unyeah!<%} else {%> Yeah! <%}%></button>
                <a href="/posts/<%= post.id %>" class="to-permalink-button">
                    <span class="feeling <% if (post.is_empathied_by_user) {%> added <%}%>"><%= post.empathy_count %></span>
                    <span class="reply">0</span>
                </a>
            </div>
        </div>
    </div>
</div>