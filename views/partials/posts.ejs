<% for(const post of posts) { %>
    <div id="post-<%= post.id %>" class="post <%= (post.spoiler == 1) ? "hidden" : "" %>">
        <a href="/users/undefined" class="user-icon-container <%= post.admin ? 'admin' : '' %>" scroll-focus" data-pjax="#body">
            <img src="<%= post.mii_image %>" class="user-icon">
        </a>
        <div class="post-body-content">
            <div class="post-body">
                <header>
                    <span class="user-name"><%= post.mii_name %></span>
                    <span class="timestamp"><%= moment(post.create_time).fromNow() %></span>
                    <span class="spoiler-status <%= (post.spoiler == 1) ? "spoiler show" : "" %>"><%= (post.spoiler == 1) ? "Spoilers" : "" %></span>
                </header>
    
                <div class="post-content">
                    <span class="post-title-icon">
                        <img src="/img/icons/<%= post.community_id %>.jpg" class="icon">
                    </span>
    
                    <% if (post.topic_tag) { %>
                        <a data-sound="SE_WAVE_OK" href="javascript:void(0)" onclick="aquamarine.getPostsByTopicTag(this)" class="post-tag"><%= post.topic_tag %></a>
                    <% } %>
    
                    <% if (post.screenshot) { %>
                        <a href="javascript:void(0)" class="screenshot-permalink" onclick='aquamarine.toggleCaptureModal(this)' data-sound="SE_WAVE_OK">
                            <img onerror="this.src='../../../img/banners-wup/placeholder-wup.jpg'" class="post-content-screenshot" src="/img/screenshots/<%= post.id %>.jpg">
                        </a>
                    <% } %>
                    
                    <% if (post.body) { %>
                        <p class="post-content-text"><%= post.body %></p>
                    <% } else { %>
                        <img onerror="this.src='../../../img/banners-wup/placeholder-wup.jpg'" class="post-content-memo <% if (post.topic_tag) { %>with-tag<% } %>" src="/img/paintings/<%= post.id%>.png">
                    <% } %>
                </div>
    
                <% if (post.spoiler == 1) { %>
                    <div class="hidden-content">
                        <p>This post contains spoilers.</p>
                        <div><a href="javascript:void(0)" data-sound="SE_OLV_OK_SUB" class="hidden-content-button">View Post</a></div>
                    </div>
                <% } %>
    
                <div class="post-meta">
                    <button data-sound type="button" data-post-id="<%= post.id %>" class="submit miitoo-button" <%= (post.account_id == account[0].id) ? "disabled" : "" %>><%= (post.empathies.some(empathy => empathy.account_id == account[0].id)) ? "Unyeah!" : "Yeah!" %></button>
                    <a href="javascript:void(0)" onclick="pjax.loadUrl('/posts/<%= post.id %>')" class="to-permalink-button">
                        <span class="feeling <%= (post.empathies.some(empathy => empathy.account_id == account[0].id)) ? "added" : "" %>"><%= post.empathies.length %></span>
                        <span class="reply">0</span>
                        <% if (post.title_owned) {%>
                            <span class="owns-game">1</span>
                        <% } %>
                    </a>
                </div>
            </div>
        </div>
    </div>
<% } %>