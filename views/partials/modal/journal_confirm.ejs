<div id="tutorial-confirmation-wrapper" data-loading-text="<%= locals.language.aqua.portal.community.post.post_sending_wait %>" data-no-text-error="<%= locals.language.aqua.portal.community.post.error_no_text %>" data-no-text-ok-text="<%= locals.language.aqua.portal.community.settings.ok %>"  class="none">
    <header data-diary-community-id="<%= journal_community ? journal_community.id : "" %>" class="header with-data tutorial-confirmation">
        <a class="add-post-button accesskey-b back-button" data-sound="SE_WAVE_CANCEL" href="javascript:void(0)">Cancel</a>

    <% if (journal_community) { %>
      <a class="add-post-button" data-sound="SE_WAVE_OK" href="javascript:void(0)">Send Entry</a>
      <% } %>
          <h1 class="content-title">Write a Play Journal Entry</h1>
    </header>

    <% if (journal_community) { %>
    <div class="tutorial-window diary-confirmation">
      <span class="badge"></span>
        <div class="community-container">
            <span class="icon-container">
              <img src="<%= journal_community.cdn_icon_url %>" class="icon">
            </span>
            <div class="community-name">
              <span>Suspended Program:</span>
              <p><%= journal_community.name %></p>
            </div>
            <a data-sound="SE_WAVE_OK" href="/communities/<%= journal_community.id %>" class="community-link" data-pjax></a>
          </div>

          
    <div class="add-diary-content">
      <a href="javascript:void(0)" data-toggle=".feeling-selector" class="mii-icon-container">
        <img src="http://mii-images.account.nintendo.net/l7nesmcevej9_normal_face.png" class="icon">
    </a>

    <h1 class="mii-name">David Joaq</h1>
    
    <label class="spoiler-button checkbox-button">Revelaciones
      <input autocomplete="off" type="checkbox" class="spoiler_input" name="is_spoiler" value="0">
  </label>

    <a href="javascript:void(0)" data-toggle=".screenshot-toggle-container" class="screenshot-toggle-button">
      <img src="/img/sprsheet/screenshot_selector.png">
  </a>

    <div class="screenshot-toggle-container none">
      <li>
      <input autocomplete="off" type="radio" name="_screenshot_value" value="top" data-sound="SE_OLV_TOGGLE_SELECTED_CHECK">
      <img class="screenshot-tv" src="">
      </li>
      <li>
      <input autocomplete="off" type="radio" name="_screenshot_value" value="bottom" data-sound="SE_OLV_TOGGLE_SELECTED_CHECK">
      <img class="screenshot-drc" src="">
      </li>
      <input autocomplete="off" type="hidden" name="screenshot_value" id="screenshot_val_input" value="">
      <a href="javascript:void(0)" data-sound="SE_WAVE_CANCEL" class="cancel-toggle-button">No Screenshot</a>
      <a href="javascript:void(0)" data-sound="SE_WAVE_OK_SUB" class="select-screenshot-album">Choose from Screenshot Album</a>
      </div>

    <div class="feeling-selector expression none">
      <ul class="buttons">
          <li class="checked">
              <input autocomplete="off" type="radio" name="feeling_id" value="0" class="feeling-button-normal" data-mii-face-url="http://mii-images.account.nintendo.net/l7nesmcevej9_normal_face.png" checked="" data-sound="SE_WAVE_MII_FACE_00">
          </li>
          <li>
              <input autocomplete="off" type="radio" name="feeling_id" value="1" class="feeling-button-happy" data-mii-face-url="http://mii-images.account.nintendo.net/l7nesmcevej9_happy_face.png" data-sound="SE_WAVE_MII_FACE_01">
          </li>
          <li>
              <input autocomplete="off" type="radio" name="feeling_id" value="2" class="feeling-button-like" data-mii-face-url="http://mii-images.account.nintendo.net/l7nesmcevej9_like_face.png" data-sound="SE_WAVE_MII_FACE_02">
          </li>
          <li>
              <input autocomplete="off" type="radio" name="feeling_id" value="3" class="feeling-button-surprised" data-mii-face-url="http://mii-images.account.nintendo.net/l7nesmcevej9_surprised_face.png" data-sound="SE_WAVE_MII_FACE_03">
          </li>
          <li>
              <input autocomplete="off" type="radio" name="feeling_id" value="4" class="feeling-button-frustrated" data-mii-face-url="http://mii-images.account.nintendo.net/l7nesmcevej9_frustrated_face.png" data-sound="SE_WAVE_MII_FACE_04">
          </li>
          <li>
              <input autocomplete="off" type="radio" name="feeling_id" value="5" class="feeling-button-puzzled" data-mii-face-url="http://mii-images.account.nintendo.net/l7nesmcevej9_puzzled_face.png" data-sound="SE_WAVE_MII_FACE_05">
          </li>
      </ul>
  </div>

  <div class="textarea-container">
    <textarea autocomplete="off" type="text" guidestring="Escribe una publicación." data-sound="" name="body" class="textarea-text" value="" maxlength="255" placeholder="Comparte tus pensamientos con una publicación a esta comunidad."></textarea>
</div>

    </div>
    </div>
    <% } else { %>
    <div class="no-content-window">
      <div class="example-img">
      <img src="/img/journal-example.png">
       </div>
      <p><span>There is not a community for the suspended software yet.</span>
        If you launch Aquamarine while playing a supported software title, you can write an entry about your thoughts and experiences in your Play Journal.</p>
  </div>
  <% } %>

</div>